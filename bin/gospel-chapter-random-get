#!/usr/bin/env python3
from random import choice, randint
from sys import argv


def main():
    count = int(argv[1]) if len(argv) > 1 else 1
    data = {"matthew": 28, "mark": 16, "luke": 24, "john": 21}
    for _ in range(count):
        random_book = choice(list(data.keys()))
        random_chapter = randint(1, data[random_book])
        print(f"{random_book} {random_chapter}")


if __name__ == "__main__":
    main()

#!/usr/bin/env python3
from argparse import ArgumentParser
from sys import stdin
from faiss import METRIC_L2, index_factory, write_index
from numpystring import to_array


def main():
    parser = ArgumentParser()
    parser.add_argument("filepath")
    parser.add_argument("--string")
    parser.add_argument("--metric", type=int, default=METRIC_L2)
    args = parser.parse_args()
    index = None
    for line in stdin:
        array = to_array(line)
        if index is None:
            dims = array.shape[-1]
            index = index_factory(dims, args.string)
        index.add(array)  # pylint: disable=no-value-for-parameter
    write_index(index, args.filepath)


if __name__ == "__main__":
    main()

#!/usr/bin/env python3
from contextlib import suppress
from random import shuffle


def main():
    data = {"matthew": 28, "mark": 16, "luke": 24, "john": 21}
    items = list(create(data))
    while True:
        shuffle(items)
        for item in items:
            print(item)


def create(data):
    for book, chapters in data.items():
        for i in range(chapters):
            yield f"{book} {i+1}"


if __name__ == "__main__":
    with suppress(KeyboardInterrupt, OSError):
        main()
